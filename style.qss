/* ......................................................................*/

/* Внешний вид списка*/
QListWidget
{
    background-color: #F6F8FA;
}

QListWidget::item
{
    border-bottom: 1px solid #000000;
    min-height: 3em;
}

QListWidget::item:hover
{
    background-color: #EEEFF2;
}

QListView::item:selected:active
{
     background-color: #EEEFF2;
     color: #000000;
}

/* ......................................................................*/
QGroupBox task_widget_new
{
    min-width: 450px;
    min-height: 125px;
    max-width: 800px;
    max-height: 125px;
    background-color: #FFFFFF;
    border: 1px solid #000000;
    border-radius: 10px;
}


QGroupBox task_widget_new QLabel
{
    max-width: 100px;
}

QGroupBox task_widget_new QPushButton
{
    max-width: 120px;
    max-height: 80px;
}
/* ......................................................................*/

QTreeWidget
{
    background-color: #FFFFFF;
}

QTreeWidget QHeaderView
{
    background-color: #EEEEEE;
    border: none;
}

/* ......................................................................*/
QScrollBar:vertical
{
     background: #EEF0F5;
     min-width: 8px;
     max-width: 8px;
}

QScrollBar:horizontal
{
     background: #EEF0F5;
     min-height: 8px;
     max-height: 8px;
}

QScrollBar::handle
{
/*ползунок*/
    border-radius: 4px;
    background: #CCCBCE;
    min-height: 20px;
}
QScrollBar::add-line,
QScrollBar::sub-line,
QScrollBar::up-arrow,
QScrollBar::down-arrow,
QScrollBar::add-page,
QScrollBar::sub-page
{
    background: #EEF0F5;
}
/* ......................................................................*/
QDialog, QDialog QLabel
{
    background: #EEF0F5;
}
/* ......................................................................*/
QProgressBar
{
    border: 1px solid #aaaaaa;
    background: white;
    border-radius: 4px;
    text-align:center;
    min-height: 16px;
    max-height: 16px;
}

QProgressBar::chunk
{
    background: qlineargradient(x1:0, y1:1, x2:1, y2:0,
                                stop:0 #53B96A,
                                stop:0.25 #53B96A,
                                stop:0.250001 #28A745,
                                stop:0.5 #28A745,
                                stop:0.500001 #53B96A,
                                stop:0.75 #53B96A,
                                stop:0.750001 #28A745,
                                stop:1 #28A745);
    width: 20px;
}