    background-color: #FFFFFF;
    border: 1px solid #000000;
    border-radius: 10px;
}

project_widget_new QLabel
{
    background-color: #FFFFFF;
}
project_widget_new QPushButton
{
    max-width: 200px;
    max-height: 40px;
