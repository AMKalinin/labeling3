QMainWindow
{
    min-width: 1280px;
    min-height: 720px;
    background: #EEF0F5;
}
/* ......................................................................*/
QWidget
{
    font-size: 14px;
    font-family: Nunito Sans;
}
/* ......................................................................*/

/* кнопка button_default */
QPushButton
{
    background-color: #F6F8FA;
    border: 2px solid #D5D8DA;
    border-radius: 6px;
    min-width: 40px;    min-height: 25px;
    max-width: 300px;   max-height: 50px;
}

/* кнопка при наведение мыши */
QPushButton:hover
{
    background-color:  #F6F8FA;
    border: 2px solid #B4D2F3;
}

/* кнопка при клике мыши */
QPushButton:pressed
{
    background-color:  #EEEFF2;
    border: 2px solid #CFD0D3;
}

/* ......................................................................*/

/* button_primary */
QPushButton#button_primary
{
    background-color: #2DA44E;
    border: 2px solid #2A9147;
    color: #FFFFFF;
}

/* кнопка при наведение мыши */
QPushButton:hover#button_primary
{
    border: 2px solid #ABDBB9;
}

/* кнопка при клике мыши */
QPushButton:pressed#button_primary
{
    background-color:  #298E46;
    border: 2px solid #277E41;
}

/* ......................................................................*/

/* кнопка button_danger */
QPushButton#button_danger
{
    background-color: #F6F8FA;
    border: 2px solid #D5D8DA;
    color: #D1303B;
}

/* кнопка при наведение мыши */
QPushButton:hover#button_danger
{
    border: 2px solid #EAA7AD;
    color: #D1303B;
}

/* кнопка при клике мыши */
QPushButton:pressed#button_danger
{
    color: #FFFFFF;
    background-color:  #D42A45;
    border: 2px solid #901125;
}

/* ......................................................................*/

QTabWidget::pane
{
    border-top: 40px solid #EEF0F5;
    position: absolute;
    top: -40px;
}
QTabWidget QGroupBox
{
    background: #EEF0F5;
}
QTabWidget QFrame
{
     background: #EEF0F5;
}
QTabWidget QScrollArea
{
    border: none;
}
QTabBar::tab
{
    min-width: 90px;
    min-height: 38px;
    background: #EEF0F5;
    border-bottom: 1px solid #E7E7E9;
}
QTabBar::tab:selected, QTabBar::tab:hover
{
    font-weight: Bold;
    border-bottom: 1px solid #000000;
}
/* ......................................................................*/
higher_control, view_control, project_description_new, task_description
{
    min-width: 340px;
    max-width: 340px;
}
/* ......................................................................*/
QFrame
{
    background: #E7E7E9;
}
/* ......................................................................*/

/* Внешний вид проетка*/
QGroupBox project_widget_new
{
    min-width: 400px;
